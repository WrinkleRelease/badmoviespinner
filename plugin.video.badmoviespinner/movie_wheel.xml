<?xml version="1.0" encoding="UTF-8"?>
<window>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- Background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>background.png</texture>
            <colordiffuse>88000000</colordiffuse>
        </control>
        
        <!-- Wheel background -->
        <control type="image" id="101">
            <posx>960</posx>
            <posy>540</posy>
            <width>800</width>
            <height>800</height>
            <texture>wheel_bg.png</texture>
            <animation effect="rotate" start="0" end="360" center="auto" time="5000" loop="true" condition="Control.IsVisible(101)">Conditional</animation>
        </control>
        
        <!-- Title -->
        <control type="label">
            <posx>960</posx>
            <posy>100</posy>
            <width>900</width>
            <height>60</height>
            <font>font35_title</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFFFF</textcolor>
            <label>Bad Movie Spinner</label>
        </control>
        
        <!-- Spin button -->
        <control type="button" id="201">
            <posx>760</posx>
            <posy>900</posy>
            <width>200</width>
            <height>60</height>
            <align>center</align>
            <aligny>center</aligny>
            <label>Spin Wheel</label>
            <font>font14</font>
            <textcolor>FFFFFFFF</textcolor>
            <focusedcolor>FFFFFFFF</focusedcolor>
            <texturefocus>button-focus.png</texturefocus>
            <texturenofocus>button-nofocus.png</texturenofocus>
        </control>
        
        <!-- Play button -->
        <control type="button" id="202">
            <posx>960</posx>
            <posy>900</posy>
            <width>200</width>
            <height>60</height>
            <align>center</align>
            <aligny>center</aligny>
            <label>Play Movie</label>
            <font>font14</font>
            <textcolor>FFFFFFFF</textcolor>
            <focusedcolor>FFFFFFFF</focusedcolor>
            <texturefocus>button-focus.png</texturefocus>
            <texturenofocus>button-nofocus.png</texturenofocus>
            <enable>false</enable>
        </control>
        
        <!-- Selection result text -->
        <control type="label" id="301">
            <posx>960</posx>
            <posy>800</posy>
            <width>800</width>
            <height>60</height>
            <font>font16</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>FFFFFF00</textcolor>
            <label></label>
            <visible>false</visible>
        </control>
    </controls>
</window>