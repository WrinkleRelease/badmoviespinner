<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.badmoviespinner" name="Bad Movie Spinner" version="1.0.0" provider-name="Your Name">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py" />
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Randomly selects bad movies to watch</summary>
        <description lang="en_GB">This addon creates a spinning wheel with 10 randomly selected unwatched movies tagged as "Bad Movies" and lets fate decide which one you'll watch tonight!</description>
        <disclaimer lang="en_GB">Use at your own risk!</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source></source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot-01.jpg</screenshot>
        </assets>
    </extension>
</addon>